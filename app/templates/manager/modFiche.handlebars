<div class="form-group">
	<label for="nomInput" class="col-sm-2 control-label">Nom</label>
	<div class="col-sm-10">
		<input type="text" class="form-control" name="nom" id="nomInput" value="{{ item.nom }}" placeholder="Entrez un nom">
	</div>
</div>
<div class="form-group">
	<label for="descriptionInput" class="col-sm-2 control-label">Description</label>
	<div class="col-sm-10">
		<textarea class="form-control" name="description" id="descriptionInput" placeholder="Entrez une description">{{ item.description }}</textarea>
	</div>
</div>
<div class="checkbox">
	<label>
		<input type="checkbox" name="visible" value="1" {{#if item.visible}}checked{{/if}}> Fiche visible
	</label>
</div>
<div class="checkbox">
	<label>
		<input type="checkbox" name="actif" value="1" {{#if item.actif}}checked{{/if}}> Fiche active
	</label>
</div>
