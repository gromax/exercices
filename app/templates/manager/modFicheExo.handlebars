<h4>{{ params.exoModel.title }}</h4>
<p>{{ params.exoModel.description }}</p>
{{#if params.nouveau}}
<input type="hidden" name="idE" value="{{params.exoModel.id}}">
{{/if}}
<div class="form-group">
	<label for="numInput" class="col-sm-4 control-label">Répétitions</label>
	<div class="col-sm-8">
		<input type="text" class="form-control" name="num" id="numInput" value="{{ params.num }}" placeholder="Entrez un nombre">
	</div>
</div>
<div class="form-group">
	<label for="coeffInput" class="col-sm-4 control-label">Coefficient</label>
	<div class="col-sm-8">
		<input type="text" class="form-control" name="coeff" id="coeffInput" value="{{ params.coeff }}" placeholder="Entrez un coefficient">
	</div>
</div>
{{#if params.options}}
<h4>Options de l'exercice</h4>
	{{#each params.options}}
<div class="form-group">
	<label for="coeffInput" class="col-sm-4 control-label">{{ this.tag }}</label>
	<div class="col-sm-8">
		<select name="{{ @key }}" class="form-control">
		{{#each this.options}}
			<option value="{{@index}}" {{selected @index ../value}}>{{this}}</option>
		{{/each}}
		</select>

	</div>
</div>
	{{/each}}
{{/if}}
