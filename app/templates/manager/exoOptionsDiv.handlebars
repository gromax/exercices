<div class="collapse" id="{{id}}">
	<div class="panel panel-warning">
		<div class="panel-heading"><h4 class="panel-title"><span class="glyphicon glyphicon-cog"></span> Options</h4></div>
		<div class="panel-body">
			<form id="{{idForm}}">
			<div class="row">
			{{#each options}}
				<div class="col-xs-12 col-md-6">
					<div class="input-group">
						<span class="input-group-addon">{{ this.tag }}</span>
						<select name="{{ @key }}" class="form-control">
						{{#each this.options}}
							<option value="{{@index}}" {{selected @index ../value}}>{{this}}</option>
						{{/each}}
						</select>
					</div>
				</div>
			{{/each}}
				<div class="col-xs-12 col-md-6">
					<div class="btn-group" role"group">
						<button type="submit" class="btn btn-default">Valider</button>
					</div>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>
